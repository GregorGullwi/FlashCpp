// Minimal cstdio header stub for FlashCpp
// Provides only the basic I/O function declarations needed for compilation
// This is a simplified stub - the real libstdc++/libc++ headers are too complex for FlashCpp to parse

#ifndef _FLASHCPP_CSTDIO
#define _FLASHCPP_CSTDIO

#include <cstddef>

namespace std {
    // FILE type as opaque struct pointer
    struct _FILE;
    typedef _FILE* FILE;
    
    // Basic I/O functions
    extern "C" int puts(const char* str);
    extern "C" int printf(const char* format, ...);
    extern "C" int fprintf(FILE stream, const char* format, ...);
    extern "C" int sprintf(char* buffer, const char* format, ...);
    extern "C" int snprintf(char* buffer, size_t size, const char* format, ...);
    
    extern "C" int putchar(int c);
    extern "C" int getchar(void);
    
    extern "C" FILE fopen(const char* filename, const char* mode);
    extern "C" int fclose(FILE stream);
    extern "C" size_t fread(void* ptr, size_t size, size_t count, FILE stream);
    extern "C" size_t fwrite(const void* ptr, size_t size, size_t count, FILE stream);
}

#endif // _FLASHCPP_CSTDIO
